    def help_screen
        puts "\n"
        box = TTY::Box.frame "Drawing a box in", "terminal emulator", padding: 3, align: :center
        puts "<list #>    Navigate to region, country, or dumpling" 
        puts "back        Go back one step"
        puts "back!       Go back to first step"
        puts "\n"
        puts "history     Read about the history of dumplings"
        puts "\n"
        puts "help        View options"
        puts "exit        Quit application"
        puts "\n"  
        puts "Enter 'done' to return"
        puts "\n"
    end
    